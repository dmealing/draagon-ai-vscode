{
  "name": "draagon-ai",
  "displayName": "Draagon AI",
  "description": "AI-powered coding assistant with intelligent multi-LLM routing, shared memory, and custom agents",
  "version": "0.3.2",
  "publisher": "draagon",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Draagon/draagon-ai"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "claude",
    "groq",
    "coding assistant",
    "memory",
    "agents"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "draagon.openChat",
        "title": "Open Draagon Chat",
        "category": "Draagon"
      },
      {
        "command": "draagon.openChatPanel",
        "title": "Open Draagon Chat Panel",
        "category": "Draagon",
        "icon": {
          "light": "resources/icon.svg",
          "dark": "resources/icon.svg"
        }
      },
      {
        "command": "draagon.newSession",
        "title": "New Chat Session",
        "category": "Draagon"
      },
      {
        "command": "draagon.runCodeReview",
        "title": "Run Code Review",
        "category": "Draagon"
      },
      {
        "command": "draagon.runSecurityScan",
        "title": "Run Security Scan",
        "category": "Draagon"
      },
      {
        "command": "draagon.openMemoryBrowser",
        "title": "Open Memory Browser",
        "category": "Draagon"
      },
      {
        "command": "draagon.showStats",
        "title": "Show Usage Statistics",
        "category": "Draagon"
      },
      {
        "command": "draagon.renameSession",
        "title": "Rename Current Session",
        "category": "Draagon"
      },
      {
        "command": "draagon.resumeSession",
        "title": "Resume Previous Session",
        "category": "Draagon"
      },
      {
        "command": "draagon.installPlugin",
        "title": "Install Plugin",
        "category": "Draagon"
      },
      {
        "command": "draagon.managePlugins",
        "title": "Manage Plugins",
        "category": "Draagon"
      },
      {
        "command": "draagon.manageMcpServers",
        "title": "Manage MCP Servers",
        "category": "Draagon"
      },
      {
        "command": "draagon.runPrReview",
        "title": "Run PR Review",
        "category": "Draagon"
      },
      {
        "command": "draagon.processDocument",
        "title": "Process Document",
        "category": "Draagon"
      },
      {
        "command": "draagon.launchAgentSwarm",
        "title": "Launch Agent Swarm",
        "category": "Draagon"
      },
      {
        "command": "draagon.launchBrowser",
        "title": "Launch Browser",
        "category": "Draagon"
      },
      {
        "command": "draagon.closeBrowser",
        "title": "Close Browser",
        "category": "Draagon"
      },
      {
        "command": "draagon.connectFigma",
        "title": "Connect Figma",
        "category": "Draagon"
      },
      {
        "command": "draagon.importFigmaDesign",
        "title": "Import Figma Design",
        "category": "Draagon"
      },
      {
        "command": "draagon.managePermissions",
        "title": "Manage Permissions",
        "category": "Draagon"
      },
      {
        "command": "draagon.showTokenUsage",
        "title": "Show Token Usage",
        "category": "Draagon"
      },
      {
        "command": "draagon.viewHistory",
        "title": "View Conversation History",
        "category": "Draagon"
      },
      {
        "command": "draagon.searchHistory",
        "title": "Search Conversation History",
        "category": "Draagon"
      },
      {
        "command": "draagon.exportHistory",
        "title": "Export Conversation",
        "category": "Draagon"
      },
      {
        "command": "draagon.configureWsl",
        "title": "Configure WSL",
        "category": "Draagon"
      },
      {
        "command": "draagon.selectThinkingMode",
        "title": "Select Thinking Mode",
        "category": "Draagon"
      },
      {
        "command": "draagon.cycleThinkingMode",
        "title": "Cycle Thinking Mode",
        "category": "Draagon"
      },
      {
        "command": "draagon.attachImage",
        "title": "Attach Image",
        "category": "Draagon"
      },
      {
        "command": "draagon.refreshAccount",
        "title": "Refresh Account Info",
        "category": "Draagon",
        "icon": "$(refresh)"
      },
      {
        "command": "draagon.authenticateClaude",
        "title": "Authenticate with Claude",
        "category": "Draagon"
      },
      {
        "command": "draagon.switchAccount",
        "title": "Switch Claude Account",
        "category": "Draagon"
      },
      {
        "command": "draagon.runSecurityScanner",
        "title": "Run Security Scanner",
        "category": "Draagon Agents"
      },
      {
        "command": "draagon.runTestGenerator",
        "title": "Generate Tests for Current File",
        "category": "Draagon Agents"
      },
      {
        "command": "draagon.runPrReviewer",
        "title": "Run PR Review",
        "category": "Draagon Agents"
      },
      {
        "command": "draagon.listAgents",
        "title": "List Available Agents",
        "category": "Draagon Agents"
      },
      {
        "command": "draagon.viewPlans",
        "title": "View Implementation Plans",
        "category": "Draagon Plans"
      },
      {
        "command": "draagon.executePlan",
        "title": "Execute Plan",
        "category": "Draagon Plans"
      },
      {
        "command": "draagon.tagConversation",
        "title": "Tag Conversation",
        "category": "Draagon History"
      },
      {
        "command": "draagon.filterByTag",
        "title": "Filter Conversations by Tag",
        "category": "Draagon History"
      },
      {
        "command": "draagon.askAboutSelection",
        "title": "Ask Draagon about this",
        "category": "Draagon"
      },
      {
        "command": "draagon.explainCode",
        "title": "Explain this code",
        "category": "Draagon"
      },
      {
        "command": "draagon.generateTestsForSelection",
        "title": "Generate tests for this",
        "category": "Draagon"
      },
      {
        "command": "draagon.refactorCode",
        "title": "Refactor this code",
        "category": "Draagon"
      },
      {
        "command": "draagon.documentCode",
        "title": "Document this code",
        "category": "Draagon"
      },
      {
        "command": "draagon.findBugs",
        "title": "Find bugs in this code",
        "category": "Draagon"
      }
    ],
    "keybindings": [
      {
        "command": "draagon.openChat",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      },
      {
        "command": "draagon.runCodeReview",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "draagon.cycleThinkingMode",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "draagon.viewHistory",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h"
      },
      {
        "command": "draagon.attachImage",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "draagon",
          "title": "Draagon AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "draagon": [
        {
          "type": "webview",
          "id": "draagon.accountView",
          "name": "Account",
          "icon": "resources/icon.svg"
        },
        {
          "type": "tree",
          "id": "draagon.agentsView",
          "name": "Agents",
          "icon": "resources/icon.svg"
        },
        {
          "type": "tree",
          "id": "draagon.memoryView",
          "name": "Memory",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Draagon AI",
      "properties": {
        "draagon.claude.path": {
          "type": "string",
          "default": "claude",
          "description": "Path to Claude Code CLI executable"
        },
        "draagon.claude.model": {
          "type": "string",
          "default": "default",
          "description": "Claude model to use (default, sonnet, opus)"
        },
        "draagon.permissionMode": {
          "type": "string",
          "enum": ["bypassPermissions", "acceptEdits", "dontAsk", "default", "plan", "delegate"],
          "default": "acceptEdits",
          "description": "Permission mode for Claude tool execution. 'acceptEdits' auto-approves file edits (recommended). 'bypassPermissions' is full YOLO mode. Note: In headless mode, 'default' and 'plan' modes will cause tools to fail since there's no UI for prompts.",
          "enumDescriptions": [
            "YOLO mode - bypass ALL permission prompts, execute everything automatically",
            "Auto-accept file edits (Edit/Write) but skip other dangerous operations (Recommended)",
            "Skip unapproved tools silently without prompting (safe but may miss operations)",
            "Default Claude behavior - prompts for each tool (⚠️ fails in headless mode)",
            "Plan mode - shows plan before executing (⚠️ fails in headless mode)",
            "Delegate permissions to another process (advanced)"
          ]
        },
        "draagon.allowedTools": {
          "type": "array",
          "default": ["Read", "Write", "Edit", "MultiEdit", "Glob", "Grep", "Bash", "Task", "TodoWrite", "WebSearch", "WebFetch", "NotebookEdit"],
          "description": "Additional tools to allow (used with 'plan' or 'delegate' permission modes). See https://code.claude.com/docs/en/headless",
          "items": {
            "type": "string"
          }
        },
        "draagon.routing.enabled": {
          "type": "boolean",
          "default": false,
          "description": "[Coming Soon] Multi-LLM routing is not yet available",
          "markdownDeprecationMessage": "**Coming Soon** - Multi-LLM routing will be available in a future release via Draagon MCP."
        },
        "draagon.groq.apiKey": {
          "type": "string",
          "default": "",
          "description": "[Coming Soon] Groq integration is not yet available",
          "markdownDeprecationMessage": "**Coming Soon** - Groq fast-path routing will be available in a future release."
        },
        "draagon.groq.model": {
          "type": "string",
          "default": "llama-3.1-8b-instant",
          "description": "[Coming Soon] Groq model selection is not yet available",
          "markdownDeprecationMessage": "**Coming Soon** - Groq model selection will be available in a future release."
        },
        "draagon.memory.enabled": {
          "type": "boolean",
          "default": false,
          "description": "[Coming Soon] Draagon Memory integration is not yet available",
          "markdownDeprecationMessage": "**Coming Soon** - Memory integration will be available via Draagon MCP in a future release."
        },
        "draagon.memory.endpoint": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "[Coming Soon] Memory server endpoint",
          "markdownDeprecationMessage": "**Coming Soon** - Memory server will be available in a future release."
        },
        "draagon.memory.serverCommand": {
          "type": "string",
          "default": "python -m draagon_ai.mcp.server",
          "description": "[Coming Soon] Memory MCP server command",
          "markdownDeprecationMessage": "**Coming Soon** - Memory MCP server will be available in a future release."
        },
        "draagon.memory.autoContext": {
          "type": "boolean",
          "default": true,
          "description": "[Coming Soon] Auto-context from memory is not yet available",
          "markdownDeprecationMessage": "**Coming Soon** - Memory auto-context will be available in a future release."
        },
        "draagon.agents.codeReview.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Code Review agent"
        },
        "draagon.agents.securityScan.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Security Scanner agent"
        },
        "draagon.agents.securityScan.onSave": {
          "type": "boolean",
          "default": false,
          "description": "Run security scan automatically on file save"
        },
        "draagon.agents.custom": {
          "type": "array",
          "default": [],
          "description": "Custom agent definitions"
        },
        "draagon.ui.showTokenCost": {
          "type": "boolean",
          "default": true,
          "description": "Show token usage and cost estimates"
        },
        "draagon.ui.showRoutingInfo": {
          "type": "boolean",
          "default": false,
          "description": "Show which LLM handled each request"
        },
        "draagon.backup.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic checkpoints before AI makes changes"
        },
        "draagon.backup.maxCommits": {
          "type": "number",
          "default": 50,
          "minimum": 5,
          "maximum": 500,
          "description": "Maximum number of checkpoints to keep"
        },
        "draagon.backup.gcInterval": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Run git garbage collection every N checkpoints"
        },
        "draagon.backup.autoCheckpoint": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create checkpoints before Claude makes changes"
        },
        "draagon.plugins.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable plugin system"
        },
        "draagon.plugins.autoUpdate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically update plugins"
        },
        "draagon.mcp.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Auto-start MCP servers on extension activation"
        },
        "draagon.mcp.servers": {
          "type": "array",
          "default": [],
          "description": "List of MCP servers to manage"
        },
        "draagon.orchestrator.maxAgents": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of parallel agents in swarm"
        },
        "draagon.orchestrator.defaultModel": {
          "type": "string",
          "default": "claude-3.5-sonnet",
          "description": "Default model for agent swarm"
        },
        "draagon.browser.chromePath": {
          "type": "string",
          "default": "",
          "description": "Path to Chrome executable for browser control"
        },
        "draagon.browser.headless": {
          "type": "boolean",
          "default": false,
          "description": "Run browser in headless mode"
        },
        "draagon.figma.accessToken": {
          "type": "string",
          "default": "",
          "description": "Figma Personal Access Token"
        },
        "draagon.figma.defaultFramework": {
          "type": "string",
          "enum": ["react", "vue", "svelte", "html", "tailwind"],
          "default": "react",
          "description": "Default framework for Figma code generation"
        },
        "draagon.thinking.showChainOfThought": {
          "type": "boolean",
          "default": true,
          "description": "Show chain-of-thought reasoning in UI"
        },
        "draagon.prReview.defaultAgents": {
          "type": "array",
          "default": ["security", "error-handling", "type-safety"],
          "description": "Default agents to run for PR review"
        },
        "draagon.permissions.yoloMode": {
          "type": "boolean",
          "default": false,
          "description": "Auto-approve all tool executions (use with caution)"
        },
        "draagon.permissions.safeTools": {
          "type": "array",
          "default": ["Read", "Glob", "Grep", "LS", "Task", "TodoRead"],
          "description": "Tools that don't require permission"
        },
        "draagon.history.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable conversation history storage"
        },
        "draagon.history.maxConversations": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "description": "Maximum number of conversations to store"
        },
        "draagon.history.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save conversations"
        },
        "draagon.wsl.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Run Claude CLI via WSL (Windows only)"
        },
        "draagon.wsl.distro": {
          "type": "string",
          "default": "Ubuntu",
          "description": "WSL distribution to use"
        },
        "draagon.wsl.claudePath": {
          "type": "string",
          "default": "claude",
          "description": "Path to Claude CLI in WSL"
        },
        "draagon.wsl.nodePath": {
          "type": "string",
          "default": "node",
          "description": "Path to Node.js in WSL"
        },
        "draagon.thinkingMode.default": {
          "type": "string",
          "enum": ["default", "think", "thinkHard", "thinkHarder", "ultrathink"],
          "default": "default",
          "description": "Default thinking intensity mode"
        },
        "draagon.thinkingMode.showIndicator": {
          "type": "boolean",
          "default": true,
          "description": "Show thinking mode in status bar"
        },
        "draagon.images.maxSize": {
          "type": "number",
          "default": 10485760,
          "description": "Maximum image size in bytes (default 10MB)"
        },
        "draagon.images.retentionDays": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "maximum": 365,
          "description": "Number of days to keep stored images"
        },
        "draagon.tokens.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show token usage in status bar"
        },
        "draagon.tokens.showCost": {
          "type": "boolean",
          "default": true,
          "description": "Show cost estimates alongside token counts"
        },
        "draagon.diff.colorScheme": {
          "type": "string",
          "enum": ["default", "github", "monokai"],
          "default": "default",
          "description": "Color scheme for diff display"
        }
      }
    },
    "submenus": [
      {
        "id": "draagon.contextMenu",
        "label": "Draagon AI"
      }
    ],
    "menus": {
      "commandPalette": [
        { "command": "draagon.openChat" },
        { "command": "draagon.openChatPanel" },
        { "command": "draagon.newSession" }
      ],
      "editor/title": [
        {
          "command": "draagon.openChatPanel",
          "group": "navigation",
          "when": "true"
        }
      ],
      "scm/title": [
        {
          "command": "draagon.openChatPanel",
          "group": "navigation",
          "when": "true"
        }
      ],
      "editor/context": [
        {
          "submenu": "draagon.contextMenu",
          "group": "draagon@0",
          "when": "editorHasSelection"
        },
        {
          "command": "draagon.openChatPanel",
          "group": "draagon@1"
        }
      ],
      "draagon.contextMenu": [
        {
          "command": "draagon.askAboutSelection",
          "group": "ask@1"
        },
        {
          "command": "draagon.explainCode",
          "group": "ask@2"
        },
        {
          "command": "draagon.findBugs",
          "group": "review@1"
        },
        {
          "command": "draagon.runCodeReview",
          "group": "review@2"
        },
        {
          "command": "draagon.runSecurityScan",
          "group": "review@3"
        },
        {
          "command": "draagon.generateTestsForSelection",
          "group": "generate@1"
        },
        {
          "command": "draagon.refactorCode",
          "group": "generate@2"
        },
        {
          "command": "draagon.documentCode",
          "group": "generate@3"
        }
      ],
      "explorer/context": [
        {
          "command": "draagon.openChatPanel",
          "group": "draagon@1"
        }
      ],
      "view/title": [
        {
          "command": "draagon.refreshAccount",
          "when": "view == draagon.accountView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.96.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.17.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "groq-sdk": "^0.8.0",
    "marked": "^15.0.4",
    "ws": "^8.18.0"
  }
}
